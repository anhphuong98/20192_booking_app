<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f1f2f3"
    android:layout_height="match_parent"
    tools:context=".activity.DetailUserInfo">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="20"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backUser"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView21"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="19"
            android:gravity="center"
            android:text="Thông tin người dùng" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/avatar" />

        </androidx.cardview.widget.CardView>

        <!--        <TextView-->
        <!--            android:paddingLeft="70dp"-->
        <!--            android:id="@+id/textView9"-->
        <!--            android:layout_width="253dp"-->
        <!--            android:textSize="20sp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:text="Đổi ảnh đại "-->
        <!--            android:textColor="#000000" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView11"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Tên:"
            android:textColor="#000000"
           />
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textColor="#000000"
            android:text="Nguyễn Anh Phương"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/changeName"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView13"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="Email:" />
        <TextView
            android:id="@+id/detail_email"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="phuonga1k51@gmail.com" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView15"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="Địa chỉ:" />
        <TextView
            android:id="@+id/detail_address"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="Yên Phong - Bắc Ninh" />
        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/changeAddress"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView17"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="Số điện thoại:" />
        <TextView
            android:id="@+id/detail_phone"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="+ 84337479966" />
        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/changePhone"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView19"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="Mật khẩu:" />
        <TextView
            android:id="@+id/changePass"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:textColor="#2A6BD7"
            android:textStyle=""
            android:text="@string/change_pass_string" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>