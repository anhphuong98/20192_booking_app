<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f3"
    android:theme="@style/SearchView"
    tools:context=".activity.HomeActivity">

    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <LinearLayout
            android:id="@+id/linearMenuHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconMenuHome"
                android:layout_width="19dp"
                android:layout_height="29dp"
                android:tint="#777777"
                app:srcCompat="@drawable/icon_home" />

            <TextView
                android:id="@+id/txtMenuHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textColor="@color/colorBlack" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearMenuHistoryOrder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconMenuHistory"
                android:layout_width="19dp"
                android:layout_height="29dp"
                android:tint="#777777"
                app:srcCompat="@drawable/icon_order" />

            <TextView
                android:id="@+id/txtMenuHistoryOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử đơn hàng"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMenuProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconMenuProfile"
                android:layout_width="19dp"
                android:layout_height="29dp"
                android:tint="#777777"
                app:srcCompat="@drawable/icon_profile" />

            <TextView
                android:id="@+id/txtMenuProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá nhân"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


