    <TextView
        android:id="@+id/namestore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Quán hạnh phúc"
        android:textColor="#39383a"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imagestore1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressStore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="472 bạch mai"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imagestore1"
        app:layout_constraintTop_toBottomOf="@id/namestore1" />

    <TextView
        android:id="@+id/timeOrder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="85dp"
        android:text="8:00 am, 10/6/2020"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/imagestore1"
        app:layout_constraintEnd_toStartOf="@+id/addressStore1"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toEndOf="@id/imagestore1"
        app:layout_constraintTop_toBottomOf="@id/namestore1"
        app:layout_constraintVertical_bias="0.471" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bbbcbf"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/timeOrder1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/processOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang giao"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toEndOf="@+id/addressStore1"
